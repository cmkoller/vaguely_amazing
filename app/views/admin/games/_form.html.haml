= form_for [:admin, @game] do |f|
  = f.label :featured_image
  = f.file_field :featured_image

  = f.label :title
  = f.text_field :title

  = f.label :price
  = f.number_field :price, :class => 'text_field', :step => :any

  = f.label :description
  = f.text_area :description

  = f.label :file
  = f.file_field :file

  = f.submit class: "button"
