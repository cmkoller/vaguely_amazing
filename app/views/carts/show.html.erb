<div id="mycart" class="small-10 small-centered medium-8 large-8 column">
  <div class="p1 glassy-bg mb1 text-center radius-l1 radius-r1">
    <h4>My Cart</h4>
    <p class="mb0"> You've selected <span class="cart-count"><%=current_user.cart_count%></span> games!</p>
  </div>

  <% @cart_games.each do |game|%>
  <div data-equalizer class="cart-game large-12 column mb1">
    <div class="column large-2 text-center p0" data-equalizer-watch>
      <%=link_to game do%>
        <%= game.title %>
      <%end%>
    </div>
  
    <div class="column large-3 primary-bg text-center radius-r1" data-equalizer-watch>
      <%=link_to "" , data: {targetUrl: remove_from_cart_path(game)} do%>
        <i class="fi-x right"></i>
      <%end%>
      <h4 class="scale">$ <%= game.price %></h4>
    </div>
  </div>
  <%end%>
</div>
